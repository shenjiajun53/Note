<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context="${relativePackage}.${activityClass}" >

<TextView 
    android:id="@+id/recordtime"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="32sp"
    android:text="00:00"
    android:textColor="#546e7a"
    />
<TextView 
    android:id="@+id/recordtips"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:layout_below="@+id/recordtime"
    android:textColor="#42000000"
    />
<FrameLayout 
    android:layout_centerHorizontal="true"
    android:layout_marginTop="5dp"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:id="@+id/taplayout"
    android:layout_below="@+id/recordtips"
    android:translationZ="3dp"
    >
<ImageButton 
    android:id="@+id/recordtap"
    android:translationZ="3dp"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:layout_gravity="center"
    android:background="@drawable/recordbutton"
    android:tint="#b0bec5"
    android:src="@drawable/ic_mic_grey600_24dp"
    android:visibility="visible"
    />
<ImageButton 
    android:id="@+id/recordtap2"
    android:translationZ="3dp"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:layout_gravity="center"
    android:background="@drawable/recordbutton2"
    android:tint="#ffffff"
    android:src="@drawable/ic_mic_grey600_24dp"
    android:visibility="gone"
    />
</FrameLayout>
<TextView
        android:id="@+id/recorddiscard" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discard_record"
		android:layout_marginEnd="25dp"
		android:layout_marginBottom="20dp"
        android:textSize="18sp"
        style="@android:style/TextAppearance.Theme.Dialog"
        android:layout_alignBaseline="@+id/recordsave"
        android:layout_toStartOf="@+id/recordsave"
        android:textColor="#1baba6"
        android:visibility="visible"
        />
    <TextView
        android:id="@+id/recordsave" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingEnd="25dp"
		android:layout_marginBottom="20dp"
		android:layout_below="@+id/taplayout"
        android:text="@string/save_diarecord"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        style="@android:style/TextAppearance.Theme.Dialog"
        android:textColor="#1baba6"
        android:visibility="visible"
        />

</RelativeLayout>
